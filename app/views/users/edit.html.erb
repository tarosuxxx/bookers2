<h1>Editing User</h1>

<%= form_with model: @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %> errors prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li>There was an error: <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :profile_image %><br>
    <%= f.file_field :profile_image, accept: 'image/*' %>
  </div>
  
  <div>
    <%= f.label :introduction %>
    <%= f.text_area :introduction %>
  </div>

  <div>
    <%= f.submit "Update User" %>
  </div>
<% end %>